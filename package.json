{
  "name": "shortcut-customizer",
  "displayName": "Command Shortcut Customizer",
  "description": "A VS Code extension that allows creating parameterized command shortcuts with visual configuration interface and hot-reload capability.",
  "version": "0.1.0",
  "publisher": "wisen",
  "icon": "resource/icon.png",
  "engines": {
    "vscode": "^1.90.2"
  },
  "keywords": [
    "Command",
    "Shortcut",
    "Customizer"
  ],
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/wisenchen/shortcut-customizer.git"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Command Shortcut Customizer",
      "properties": {
        "shortcut-customizer.commands": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string",
                "description": "需要执行的 shell 命令，例如 `npm run start`"
              },
              "name": {
                "type": "string",
                "description": "命令名称，可用于命令面板搜索执行"
              },
              "shortcut": {
                "type": [
                  "string",
                  "null"
                ],
                "default": null,
                "description": "需要绑定的快捷键 例如 `alt+shift+1`"
              },
              "parameters": {
                "type": [
                  "array",
                  "null"
                ],
                "description": "可选项，此命令的参数定义",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "input",
                        "select"
                      ],
                      "description": "参数类型，可选值为 `input`、`select`"
                    },
                    "prompt": {
                      "type": "string",
                      "description": "参数提示语"
                    },
                    "default": {
                      "type": "string",
                      "description": "参数默认值"
                    },
                    "options": {
                      "type": [
                        "array"
                      ],
                      "description": "参数可选值，仅在 `type` 为 `select` 时生效"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "shortcut-customizer.runCommand",
        "title": "Run Customizer Command"
      },
      {
        "command": "shortcut-customizer.reloadCommands",
        "title": "Reload Command Shortcuts"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
